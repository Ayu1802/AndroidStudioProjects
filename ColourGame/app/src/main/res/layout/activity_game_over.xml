<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_bg"
    android:paddingTop="50dp"
    android:paddingBottom="20dp"
    android:paddingLeft="80dp"
    android:paddingRight="80dp"
    android:orientation="vertical"
    tools:context="com.example.ayushib.colourgame.GameOver"
    android:weightSum="1">

    <TextView
        android:id="@+id/game_over"
        android:layout_width="246dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"

        android:text="@string/game_over"
        android:textAlignment="center"
        android:textColor="@color/blue_gray"
        android:textSize="38sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/level_indicator"
        android:text="Level 1"
        android:textSize="20sp"
        android:textColor="@color/dark_gray"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/points_box"
        android:layout_marginTop="20dp"
        android:textSize="36sp"
        android:background="@color/blue_gray"
        android:text="124"
        android:textColor="@color/yellow"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/highscore_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="New High Score!"
        android:textColor="@color/yellowgreen"
        android:textStyle="bold"></TextView>

    <LinearLayout
        android:background="@drawable/border"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/best_label"
            android:text="Best"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/blue_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/best_box"
            android:textSize="36sp"
            android:text="176"
            android:textColor="@color/red"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

